@startuml General Domain Model
' Style settings
skinparam classAttributeIconSize 0
skinparam classFontStyle bold
skinparam classArrowFontStyle italic

skinparam packageStyle rectangle
skinparam shadowing false
skinparam padding 4
skinparam nodesep 80
skinparam ranksep 100
skinparam defaultTextAlignment center

hide circle
hide methods

title Domain Model (DM) - General Domain Model


' User classes (top left
class Editor {
  name
  email
}

class Player {
  id
  name
  funds
}


' Map and scenario classes (top center)
class Map {
  name
  width
  height
}

class Scenario {
  name
  startTime
  endTime
}

class Location {
  x
  y
}


' Map elements classes (top right)
class City {
  name
  population
  numberOfHouseBlocks
}

class Industry {
  name
}

enum IndustryType {
  MINE
  FARM
  BAKERY
  TEXTILE
  AUTOMOBILE
  STEEL_MILL
  PORT
}

' Railway infrastructure classes (middle)
class RailwayNetwork {
    stations
}

class Station {
  name
  type
  radius
  cost
  buildings
}

enum StationType {
  DEPOT
  STATION
  TERMINAL
}

class Building {
  name
}

class Path {
  segments
}


' Train and cargo classes (bottom)
class Train {
  id
}

class Locomotive {
  id
  type
  power
  speed
  cost
  availableFrom
  availableUntil
}

enum LocomotiveType {
  STEAM
  DIESEL
  ELECTRIC
}

class Carriage {
  id
  cargoType
}

class Cargo {
  type
  quantity
  status
}

enum CargoType {
  unit
  PASSENGERS
  MAIL
  COAL
  IRON_ORE
  STEEL
  CARS
}

class Route {
  stations
  path
}

enum BuildingType {
  TELEGRAPH
  TELEPHONE
  SMALL_CAFE
  LARGE_CAFE
  CUSTOMS
  POST_OFFICE
  SMALL_HOTEL
  LARGE_HOTEL
  SILO
  LIQUID_STORAGE
}

' Core relationships
Editor "1" --> "*" Scenario : creates
Scenario "1" --> "1" Map : is defined for
Scenario "*" --> "*" LocomotiveType : makes available
Scenario "*" --> "*" IndustryType : makes available

Map "1" --> "*" Industry : contains
Map "1" --> "*" City : contains
Map "1" --> "0..*" Station : contains

' Element positions and types
Industry "1" --> "1" Location : has position
Industry "*" --> "1" IndustryType : has type
Industry "1" --> "*" CargoType : associated with

City "1" --> "1" Location : has central position

' Station relationships
Station "1" --> "1" Location : has position
Station "1" --> "0..*" Building : has
Station "*" --> "1" StationType : has type

' Player actions
Player "1" --> "0..*" Station : can build
Player "1" --> "0..*" Station : can upgrade
Player "1" --> "0..*" Train : can own

' Railway network management
RailwayNetwork "1" --> "0..*" Station : manages
RailwayNetwork "1" --> "0..*" Train : manages

' Train composition and routing
Train "1" --> "1" Locomotive : has
Train "1" --> "1..*" Carriage : consists of
Train "1" --> "0..*" Cargo : carries
Train "1" --> "0..1" Route : follows

Locomotive "*" --> "1" LocomotiveType : is of type
Carriage "*" --> "1" CargoType : carries
Route "1" --> "1..*" Station : contains
Route "1" --> "1" Path : defined by

Building "1" --> "1" BuildingType : is of type


@enduml